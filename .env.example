# ===========================================
# AppDock Environment Configuration
# ===========================================
# Copy this file to .env and modify as needed
# cp .env.example .env

# ===========================================
# Server Configuration
# ===========================================

# Port for the backend server (default: 3000)
PORT=8080

# Path to static files for production (default: ./static)
# Leave empty or remove for API-only mode
STATIC_PATH=./static

# ===========================================
# Authentication Configuration
# ===========================================

# Username for login (default: admin)
APPDOCK_USERNAME=admin

# Password for login (default: appdock)
# IMPORTANT: Change this in production!
APPDOCK_PASSWORD=appdock

# JWT secret key for token signing (default: appdock-secret-key-change-in-production)
# IMPORTANT: Use a strong random string in production!
# Generate with: openssl rand -hex 32
APPDOCK_JWT_SECRET=your-super-secret-key-change-in-production

# Disable authentication (default: false)
# Set to "true" to bypass authentication entirely (NOT recommended for production)
APPDOCK_AUTH_DISABLED=false

# ===========================================
# Docker Configuration (optional)
# ===========================================

# Docker host (default: uses local Docker socket)
# Uncomment to connect to remote Docker host
# DOCKER_HOST=tcp://localhost:2375

# ===========================================
# Frontend Configuration (for development)
# ===========================================

# API base URL (used by Vite proxy in development)
# VITE_API_URL=http://localhost:3000
